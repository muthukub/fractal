{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "declarationDir": "./dist/types",
    "isolatedModules": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "rootDir": "./",
    "target": "ESNext"
  },
  "include": [
    "./*.ts",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    "src",
    "styled-system"
  ],
  "files": [],
  "references": [
    {
      "path": "../../apps/fractal"
    }
  ]
}
