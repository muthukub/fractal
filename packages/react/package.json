{
  "name": "@snowball-tech/fractal-react",
  "version": "1.0.0",
  "description": "Fractal's (Snowball's design system) React component library based on RadixUI and PandaCSS",
  "author": "Snowball Engineering Team <engineering@snowball.xyz> (https://github.com/orgs/snowball-tech)",
  "contributors": [
    "Clément PRÉVOT <clement@snowball.xyz> (https://github.com/clementprevot)"
  ],
  "license": "MIT",
  "keywords": [
    "snowball",
    "design-system",
    "fractal",
    "react",
    "panda-css",
    "radix-ui"
  ],
  "homepage": "https://github.com/snowball-tech/fractal/tree/main/packages/react",
  "repository": {
    "type": "git",
    "url": "https://github.com/snowball-tech/fractal.git",
    "directory": "packages/react"
  },
  "bugs": "https://github.com/snowball-tech/fractal/issues",
  "packageManager": "yarn@3.6.0",
  "engines": {
    "yarn": "^3.0.0",
    "node": "^18.0.0"
  },
  "type": "module",
  "source": "index.ts",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "prebuild": "rm -Rf ./dist >/dev/null 2>&1 || true && mkdir -p ./dist",
    "build": "yarn run prebuild && yarn run build:code && yarn run -T concurrently \"yarn run build:library\" \"yarn run build:info\" \"yarn run build:styles\"",
    "build:library": "yarn tsc --build tsconfig.build.json",
    "build:code": "yarn panda codegen",
    "build:info": "yarn panda ship --outfile dist/fractal.buildinfo.json",
    "build:styles": "yarn panda cssgen && yarn run postbuild:styles",
    "postbuild:styles": "mv node_modules/@snowball-tech/panda-fractal-react/styles.css dist/fractal.css && cp node_modules/@snowball-tech/panda-fractal-react/global.css dist/global.css && (mkdir -p dist/tokens >/dev/null 2>&1 || true) && cp node_modules/@snowball-tech/panda-fractal-react/tokens/index.css dist/tokens/index.css",
    "dev": "yarn run -T concurrently \"yarn run dev:code\" \"yarn run dev:styles\"",
    "dev:code": "yarn run -T nodemon -x \"yarn run build:code\"",
    "dev:styles": "yarn run -T nodemon -x \"yarn run -T turbo run build:styles\"",
    "format": "yarn run -T prettier --ignore-path ../../.prettierignore --cache --check .",
    "format:fix": "yarn run -T prettier --ignore-path ../../.prettierignore --cache --write .",
    "lint": "yarn run lint:scripts && yarn run lint:styles",
    "lint:fix": "yarn run lint:scripts:fix && yarn run lint:styles:fix",
    "lint:scripts": "yarn run -T eslint --cache .",
    "lint:scripts:fix": "yarn run -T eslint --cache --fix .",
    "lint:styles": "yarn run -T stylelint --cache \"./**/*.{html,css,jsx,tsx}\" \"!storybook-static\"",
    "lint:styles:fix": "yarn run -T stylelint --cache --fix \"./**/*.{html,css,jsx,tsx}\" \"!storybook-static\"",
    "prepack": "json -f package.json -I -e \"delete this.devDependencies; delete this.dependencies\"",
    "postinstall": "yarn panda codegen",
    "prepare": "yarn run postinstall",
    "setup": "yarn install && yarn run prepare",
    "types:check": "tsc --noEmit"
  },
  "devDependencies": {
    "@pandacss/dev": "^0.5.0",
    "@snowball-tech/eslint-config": "^5.0.0",
    "@types/eslint": "^8.40.2",
    "@types/lodash": "^4.14.195",
    "@types/prettier": "^2.7.3",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "eslint": "^8.43.0",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@iconscout/react-unicons": "^2.0.2",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@snowball-tech/design-tokens": "^2.0.2",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
