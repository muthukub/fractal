{
  "name": "@snowball-tech/fractal",
  "version": "1.0.1",
  "description": "Fractal's (Snowball's design system) React component library based on RadixUI and PandaCSS",
  "author": "Snowball Engineering Team <engineering@snowball.xyz> (https://github.com/orgs/snowball-tech)",
  "contributors": [
    "Clément PRÉVOT <clement@snowball.xyz> (https://github.com/clementprevot)"
  ],
  "license": "MIT",
  "keywords": [
    "snowball",
    "design-system",
    "fractal",
    "react",
    "panda-css",
    "radix-ui",
    "storybook",
    "chromatic"
  ],
  "homepage": "https://github.com/snowball-tech/fractal/tree/main/packages/fractal",
  "repository": {
    "type": "git",
    "url": "https://github.com/snowball-tech/fractal.git",
    "directory": "packages/fractal"
  },
  "bugs": "https://github.com/snowball-tech/fractal/issues",
  "packageManager": "yarn@3.6.0",
  "engines": {
    "yarn": "^3.0.0",
    "node": "^18.0.0"
  },
  "type": "module",
  "source": "index.ts",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "build:chromatic": "yarn run -T chromatic --build-script-name build:chromatic:storybook",
    "build:chromatic:storybook": "yarn run -T turbo run build:storybook",
    "prebuild:storybook": "yarn run -T turbo run update:fonts --filter=@snowball-tech/fractal && yarn run clean:storybook",
    "build:storybook": "yarn run prebuild:storybook && yarn storybook build",
    "prebuild": "yarn run clean:build && mkdir -p ./dist",
    "build": "yarn run prebuild && yarn run -T concurrently \"yarn run build:code\" \"yarn run build:info\" \"yarn run build:styles\" && yarn run build:library",
    "build:library": "yarn tsc --build tsconfig.build.json && echo 'Component library successfully built!'",
    "build:lib": "yarn run build:library",
    "build:code": "yarn panda codegen && echo 'Panda code successfully generated!'",
    "build:info": "yarn panda ship --outfile dist/fractal.buildinfo.json && echo 'Panda build info successfully generated!'",
    "build:styles": "yarn panda cssgen && yarn run postbuild:styles && echo 'Panda static styles successfully generated!'",
    "postbuild:styles": "mv ./fractal-panda/styles.css dist/fractal.css && cp ./fractal-panda/global.css dist/global.css && (mkdir -p dist/tokens >/dev/null 2>&1 || true) && cp ./fractal-panda/tokens/index.css dist/tokens/index.css",
    "clean:build": "rm -Rf ./dist >/dev/null 2>&1 || true",
    "clean:fonts": "rm -Rf assets/fonts >/dev/null 2>&1 || true",
    "clean:storybook": "rm -Rf storybook-static >/dev/null 2>&1 || true",
    "dev": "yarn storybook dev -p 6006 --no-open",
    "dev:with-fonts": "yarn run -T turbo run update:fonts --filter=@snowball-tech/fractal && yarn run dev",
    "format": "yarn run -T prettier --ignore-path ../../.prettierignore --cache --check .",
    "format:fix": "yarn run -T prettier --ignore-path ../../.prettierignore --cache --write .",
    "lint": "yarn run lint:scripts && yarn run lint:styles",
    "lint:fix": "yarn run lint:scripts:fix && yarn run lint:styles:fix",
    "lint:scripts": "yarn run -T eslint --cache .",
    "lint:scripts:fix": "yarn run -T eslint --cache --fix .",
    "lint:styles": "yarn run -T stylelint --cache \"./**/*.{html,css,jsx,tsx}\" \"!storybook-static\"",
    "lint:styles:fix": "yarn run -T stylelint --cache --fix \"./**/*.{html,css,jsx,tsx}\" \"!storybook-static\"",
    "setup": "yarn install && yarn run build:code",
    "types:check": "tsc --noEmit",
    "preupdate:fonts": "yarn run clean:fonts",
    "update:fonts": "yarn run preupdate:fonts && ../../scripts/update-fonts.sh ./assets/"
  },
  "devDependencies": {
    "@pandacss/dev": "^0.5.0",
    "@snowball-tech/eslint-config": "^5.1.0",
    "@storybook/addon-a11y": "^7.0.24",
    "@storybook/addon-essentials": "^7.0.24",
    "@storybook/addon-interactions": "^7.0.24",
    "@storybook/addon-links": "^7.0.24",
    "@storybook/addons": "^7.0.24",
    "@storybook/blocks": "^7.0.24",
    "@storybook/builder-vite": "^7.0.24",
    "@storybook/components": "^7.0.24",
    "@storybook/manager-api": "^7.0.24",
    "@storybook/react": "^7.0.24",
    "@storybook/react-vite": "^7.0.24",
    "@storybook/testing-library": "^0.2.0",
    "@storybook/theming": "^7.0.24",
    "@types/eslint": "^8.40.2",
    "@types/lodash": "^4.14.195",
    "@types/prettier": "^2.7.3",
    "@types/prop-types": "^15.7.5",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@vitejs/plugin-react": "^4.0.1",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "eslint": "^8.44.0",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "prop-types": "^15.8.1",
    "storybook": "^7.0.24",
    "storybook-addon-mock": "^4.0.0",
    "typescript": "^5.1.6",
    "vite": "^4.3.9",
    "vite-plugin-dts": "^3.0.2",
    "vite-plugin-lib": "^1.2.3"
  },
  "dependencies": {
    "@iconscout/react-unicons": "^2.0.2",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@snowball-tech/design-tokens": "2.0.2",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
