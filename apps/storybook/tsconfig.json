{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "declarationDir": "./dist/types",
    "isolatedModules": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "rootDir": "../../",
    "target": "ESNext",
    "useDefineForClassFields": true
  },
  "include": [
    "./*.ts",
    "./*.tsx",
    "./.storybook/*.ts",
    "./.storybook/*.tsx",
    "./stories",
    "../../packages/react/**/*.ts",
    "../../packages/react/**/*.tsx"
  ],
  "files": [],
  "references": [
    { "path": "./tsconfig.node.json" },
    {
      "path": "../../packages/react"
    }
  ]
}
