{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "**/*.ts",
        "**/*.cts",
        "**/*.mts",
        "**/*.tsx",
        "**/*.js",
        "**/*.cjs",
        "**/*.mjs",
        "**/*.jsx",
        "**/*.mdx",
        "!.eslintrc.js",
        "!.eslintrc.cjs"
      ],
      "outputs": ["dist/**"]
    },
    "@snowball-tech/design-tokens#build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "tokens/**", "config.js"],
      "outputs": ["dist/**"]
    },
    "@snowball-tech/fractal-react#build:styles": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "*.ts",
        "*.cts",
        "*.mts",
        "*.tsx",
        "*.js",
        "*.cjs",
        "*.mjs",
        "*.jsx",
        "*.mdx",
        "!.eslintrc.js",
        "!.eslintrc.cjs"
      ],
      "outputs": ["dist/**"]
    },
    "build:storybook": {
      "dependsOn": ["^build"],
      "inputs": [
        ".storybook/**",
        "stories/**",
        "*.ts",
        "*.cts",
        "*.mts",
        "*.tsx",
        "*.js",
        "*.cjs",
        "*.mjs",
        "*.jsx",
        "*.mdx",
        "!.eslintrc.js",
        "!.eslintrc.cjs"
      ],
      "outputs": ["storybook-static/**"]
    },
    "chromatic:upload": {},
    "clean:storybook": {
      "cache": false
    },
    "update:fonts": {
      "outputs": ["**/*.ttf", "**/*.woff", "**/*.woff2"]
    },
    "format": {},
    "format:fix": {},
    "//#format": {
      "dependsOn": ["//#format:root"]
    },
    "//#format:fix": {
      "dependsOn": ["//#format:root:fix"]
    },
    "//#format:root": {},
    "//#format:root:fix": {},
    "lint": {},
    "lint:fix": {},
    "lint:scripts": {},
    "lint:scripts:fix": {},
    "lint:styles": {},
    "lint:styles:fix": {},
    "//#lint": {
      "dependsOn": ["//#lint:root"]
    },
    "//#lint:fix": {
      "dependsOn": ["//#lint:root:fix"]
    },
    "//#lint:root": {},
    "//#lint:root:fix": {},
    "types:check": {
      "inputs": ["**/*.ts", "**/*.tsx"]
    },
    "@snowball-tech/fractal-storybook#types:check": {
      "dependsOn": ["@snowball-tech/fractal-react#build"],
      "inputs": [
        ".storybook/**",
        "stories/**",
        "*.ts",
        "*.cts",
        "*.mts",
        "*.tsx",
        "*.js",
        "*.cjs",
        "*.mjs",
        "*.jsx",
        "*.mdx",
        "!.eslintrc.js",
        "!.eslintrc.cjs"
      ]
    }
  },
  "globalDependencies": [
    "**/.env*",
    ".yarnrc.yml",
    "**/.gitignore",
    "**/package.json",
    "**/tsconfig*.json"
  ]
}
