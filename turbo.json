{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:code": {
      "outputs": ["styled-system"]
    },
    "build:info": {
      "outputs": ["dist/*.buildinfo.json"]
    },
    "build:library": {
      "outputs": ["dist/**"]
    },
    "@snowball-tech/fractal#build:code": {
      "outputs": ["node_modules/@snowball-tech/fractal-panda/**"]
    },
    "@snowball-tech/fractal#build:info": {
      "outputs": ["dist/fractal.buildinfo.json"]
    },
    "@snowball-tech/fractal#build:styles": {
      "outputs": [
        "dist/fractal.css",
        "dist/global.css",
        "dist/tokens/index.css"
      ]
    },
    "@snowball-tech/design-tokens#build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "tokens/**", "config.js"],
      "outputs": ["dist/**"]
    },
    "build:storybook": {
      "outputs": ["storybook-static/**"]
    },
    "@snowball-tech/fractal#build:storybook": {
      "outputs": ["storybook-static/**"]
    },
    "chromatic:upload": {},
    "clean:build": {
      "cache": false
    },
    "clean:fonts": {
      "cache": false
    },
    "clean:storybook": {
      "cache": false
    },
    "update:fonts": {
      "outputs": ["**/*.ttf", "**/*.woff", "**/*.woff2"]
    },
    "format": {},
    "format:fix": {},
    "//#format": {
      "dependsOn": ["//#format:root"]
    },
    "//#format:fix": {
      "dependsOn": ["//#format:root:fix"]
    },
    "//#format:root": {},
    "//#format:root:fix": {},
    "lint": {},
    "lint:fix": {},
    "lint:scripts": {},
    "lint:scripts:fix": {},
    "lint:styles": {},
    "lint:styles:fix": {},
    "//#lint": {
      "dependsOn": ["//#lint:root"]
    },
    "//#lint:fix": {
      "dependsOn": ["//#lint:root:fix"]
    },
    "//#lint:root": {},
    "//#lint:root:fix": {},
    "setup": {
      "cache": false
    },
    "types:check": {}
  },
  "globalDependencies": [
    "**/.env*",
    ".yarnrc.yml",
    "**/.gitignore",
    "**/tsconfig*.json"
  ]
}
