{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:code": {
      "outputs": ["styled-system"]
    },
    "@snowball-tech/fractal-react#build:code": {
      "outputs": ["node_modules/@snowball-tech/panda-fractal-react"]
    },
    "@snowball-tech/design-tokens#build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "tokens/**", "config.js"],
      "outputs": ["dist/**"]
    },
    "@snowball-tech/fractal-react#build:styles": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:storybook": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static/**"]
    },
    "chromatic:upload": {},
    "clean:storybook": {
      "cache": false
    },
    "update:fonts": {
      "outputs": ["**/*.ttf", "**/*.woff", "**/*.woff2"]
    },
    "format": {},
    "format:fix": {},
    "//#format": {
      "dependsOn": ["//#format:root"]
    },
    "//#format:fix": {
      "dependsOn": ["//#format:root:fix"]
    },
    "//#format:root": {},
    "//#format:root:fix": {},
    "lint": {},
    "lint:fix": {},
    "lint:scripts": {},
    "lint:scripts:fix": {},
    "lint:styles": {},
    "lint:styles:fix": {},
    "//#lint": {
      "dependsOn": ["//#lint:root"]
    },
    "//#lint:fix": {
      "dependsOn": ["//#lint:root:fix"]
    },
    "//#lint:root": {},
    "//#lint:root:fix": {},
    "@snowball-tech/fractal-react#lint": {
      "dependsOn": ["build:code"]
    },
    "@snowball-tech/fractal-react#lint:fix": {
      "dependsOn": ["build:code"]
    },
    "types:check": {},
    "@snowball-tech/fractal-storybook#types:check": {
      "dependsOn": ["@snowball-tech/fractal-react#build"]
    }
  },
  "globalDependencies": [
    "**/.env*",
    ".yarnrc.yml",
    "**/.gitignore",
    "**/tsconfig*.json"
  ]
}
