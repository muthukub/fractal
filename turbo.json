{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "outputs": ["dist/**"]
    },
    "build:code": {
      "outputs": ["styled-system"],
      "inputs": ["panda.config.ts"]
    },
    "build:info": {
      "outputs": ["dist/*.buildinfo.json"]
    },
    "build:library": {
      "outputs": ["dist/**/*.js"]
    },
    "build:styles": {
      "outputs": ["dist/**/*.css"]
    },
    "@snowball-tech/fractal#build:code": {
      "outputs": ["node_modules/@snowball-tech/fractal-panda/**"],
      "inputs": ["panda.config.ts"]
    },
    "@snowball-tech/design-tokens#build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "tokens/**", "config.js"],
      "outputs": ["dist/**"]
    },
    "build:storybook": {
      "outputs": ["storybook-static/**"]
    },
    "@snowball-tech/fractal#build:storybook": {
      "outputs": ["storybook-static/**"]
    },
    "chromatic:upload": {},
    "clean:build": {
      "cache": false
    },
    "clean:fonts": {
      "cache": false
    },
    "clean:storybook": {
      "cache": false
    },
    "update:fonts": {
      "outputs": ["**/*.ttf", "**/*.woff", "**/*.woff2"]
    },
    "@snowball-tech/fractal#update:fonts": {
      "outputs": ["assets/fonts/**"],
      "inputs": ["../../scripts/update-fonts.sh"]
    },
    "format": {},
    "format:fix": {},
    "//#format": {
      "dependsOn": ["//#format:root"]
    },
    "//#format:fix": {
      "dependsOn": ["//#format:root:fix"]
    },
    "//#format:root": {},
    "//#format:root:fix": {},
    "lint": {},
    "lint:fix": {},
    "lint:scripts": {},
    "lint:scripts:fix": {},
    "lint:styles": {},
    "lint:styles:fix": {},
    "//#lint": {
      "dependsOn": ["//#lint:root"]
    },
    "//#lint:fix": {
      "dependsOn": ["//#lint:root:fix"]
    },
    "//#lint:root": {},
    "//#lint:root:fix": {},
    "setup": {
      "cache": false
    },
    "types:check": {}
  },
  "globalDependencies": [
    "**/.env*",
    ".yarnrc.yml",
    "**/.gitignore",
    "**/tsconfig*.json"
  ],
  "globalEnv": ["NODE_ENV", "VERCEL_ENV"]
}
